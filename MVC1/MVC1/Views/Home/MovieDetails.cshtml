@model MVC1.Models.Movie

@{
    ViewBag.Title = "MovieDetails";
}

<h2>@Model.Title</h2>

<div>
    <hr />
    <table>
        <tr>
            <td>
                <img src="@Model.LogoLink" alt="Logo" />
            </td>
            <td>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.DirectorId)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Director.Fullname)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Title)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Title)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Decription)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Decription)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Language)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Language)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Duration)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Duration)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Genre)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Genre)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.OfficialWebsite)
                    </dt>

                    <dd>
                        <a href="@Model.OfficialWebsite">Hollywood website</a>
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.TrailerLink)
                    </dt>

                    <dd>
                        <a href="@Model.TrailerLink">Trailer</a>
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.ReleaseDate)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ReleaseDate)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Votes)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Votes)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Rating)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Rating)
                    </dd>

                </dl>
            </td>

            <td>
                <!--<iframe src="@Model.TrailerLink" alt="Trailer" width="420" height="315"/>-->
            </td>
        </tr>
    </table>
</div>

<h4>Reviews</h4>
<div>
    @foreach (var review in @Model.Reviews)
    {
        <div style="font-size:16px; font-style:italic">
            @review.ReviewTitle

        </div>

        @review.ReviewComment
        <br />


        <form id="@review.ReviewId" method="post">
            <div class="form-horizontal">
                <input type="hidden" id="ReviewId" name="ReviewId" value="@review.ReviewId" />

                @review.Created.ToString("dd MMM yyy")
                by <a href="~/Home/UserDetails/@review.UserId"> @review.User.Person.Fullname</a>
                @review.Rating* @review.Votes votes

                <select id="Rating" name="Rating">
                    <option value="10">Excellent</option>
                    <option value="5">Good</option>
                    <option value="3">Average</option>
                    <option value="1">Poor</option>
                </select>

                <input type="submit" value="Vote" class="btn btn-default" />
            </div>
        </form>
    }
</div>

<p>
    <a href="~/Home/ReviewCreate/@Model.MovieId">Add your review</a>
    @Html.ActionLink("Back to List", "Index")
</p>
